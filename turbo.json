{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "serve": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "inputs": [
        "{app,components,hooks,i18n,layouts,middlewares,pages,providers,types,util}/**/*.{ts,tsx}",
        "{app,components,layouts,pages,styles}/**/*.{css,sass,scss}",
        "{next-data,scripts,i18n}/**/*.{mjs,json}",
        "{app,pages}/**/*.{mdx,md}",
        "*.{md,mdx,json,ts,tsx,mjs,yml}"
      ],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "deploy": {
      "inputs": [
        "{app,components,hooks,i18n,layouts,middlewares,pages,providers,types,util}/**/*.{ts,tsx}",
        "{app,components,layouts,pages,styles}/**/*.{css,sass,scss}",
        "{next-data,scripts,i18n}/**/*.{mjs,json}",
        "{app,pages}/**/*.{mdx,md}",
        "*.{md,mdx,json,ts,tsx,mjs,yml}"
      ],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint:js": {
      "inputs": [
        "{app,components,hooks,i18n,layouts,middlewares,pages,providers,types,util}/**/*.{ts,tsx}",
        "{next-data,scripts,i18n}/**/*.mjs",
        ".eslintrc.json",
        ".eslintignore"
      ],
      "outputs": [".eslintjscache"]
    },
    "lint:md": {
      "inputs": [
        "{app,pages}/**/*.{mdx,md}",
        "*.{md,mdx}",
        ".eslintrc.json",
        ".eslintignore",
        ".remarkrc.json"
      ],
      "outputs": [".eslintmdcache"]
    },
    "lint:scss": {
      "inputs": [
        "{app,components,layouts,pages,styles}/**/*.{css,sass,scss}",
        ".stylelintrc.json",
        ".stylelintignore"
      ]
    },
    "lint": {
      "inputs": [
        "{app,components,hooks,i18n,layouts,middlewares,pages,providers,types,util}/**/*.{ts,tsx}",
        "{app,components,layouts,pages,styles}/**/*.{css,sass,scss}",
        "{next-data,scripts,i18n}/**/*.mjs",
        "{.storybook,public}/**/*.{ts,js,css}",
        "{app,pages}/**/*.{mdx,md}",
        "*.{md,mdx,ts,tsx,mjs,yml}",
        ".eslintrc.json",
        ".eslintignore",
        ".stylelintrc.json",
        ".stylelintignore",
        ".prettierrc.json",
        ".prettierignore",
        ".remarkrc.json"
      ],
      "outputs": [".eslintjscache", ".eslintmdcache"]
    },
    "lint:fix": {
      "inputs": [
        "{app,components,hooks,i18n,layouts,middlewares,pages,providers,types,util}/**/*.{ts,tsx}",
        "{app,components,layouts,pages,styles}/**/*.{css,sass,scss}",
        "{next-data,scripts,i18n}/**/*.mjs",
        "{.storybook,public}/**/*.{ts,js,css}",
        "{app,pages}/**/*.{mdx,md}",
        "*.{md,mdx,ts,tsx,mjs}",
        ".eslintrc.json",
        ".eslintignore",
        ".stylelintrc.json",
        ".stylelintignore",
        ".prettierrc.json",
        ".prettierignore",
        ".remarkrc.json"
      ],
      "outputs": [".eslintjscache", ".eslintmdcache"]
    },
    "prettier": {
      "inputs": [
        "{app,components,hooks,i18n,layouts,middlewares,pages,providers,types,util}/**/*.{ts,tsx}",
        "{app,components,layouts,pages,styles}/**/*.{css,sass,scss}",
        "{next-data,scripts,i18n}/**/*.{mjs,json}",
        "{.storybook,public}/**/*.{ts,js,css,json}",
        "{app,pages}/**/*.{mdx,md}",
        "*.{md,mdx,json,ts,tsx,mjs,yml}",
        ".eslintrc.json",
        ".eslintignore",
        ".stylelintrc.json",
        ".stylelintignore",
        ".prettierrc.json",
        ".prettierignore",
        ".remarkrc.json",
        ".lintstaged.json"
      ]
    },
    "prettier:fix": {
      "inputs": [
        "{app,components,hooks,i18n,layouts,middlewares,pages,providers,types,util}/**/*.{ts,tsx}",
        "{app,components,layouts,pages,styles}/**/*.{css,sass,scss}",
        "{next-data,scripts,i18n}/**/*.{mjs,json}",
        "{.storybook,public}/**/*.{ts,js,css,json}",
        "{app,pages}/**/*.{mdx,md}",
        "*.{md,mdx,json,ts,tsx,mjs,yml}",
        ".eslintrc.json",
        ".eslintignore",
        ".stylelintrc.json",
        ".stylelintignore",
        ".prettierrc.json",
        ".prettierignore",
        ".remarkrc.json",
        ".lintstaged.json"
      ]
    },
    "format": {
      "inputs": [
        "{app,components,hooks,i18n,layouts,middlewares,pages,providers,types,util}/**/*.{ts,tsx}",
        "{app,components,layouts,pages,styles}/**/*.{css,sass,scss}",
        "{next-data,scripts,i18n}/**/*.{mjs,json}",
        "{.storybook,public}/**/*.{ts,js,css,json}",
        "{app,pages}/**/*.{mdx,md}",
        "*.{md,mdx,json,ts,tsx,mjs,yml}",
        ".eslintrc.json",
        ".eslintignore",
        ".stylelintrc.json",
        ".stylelintignore",
        ".prettierrc.json",
        ".prettierignore",
        ".remarkrc.json",
        ".lintstaged.json"
      ],
      "outputs": [".eslintjscache", ".eslintmdcache"]
    },
    "storybook": {
      "cache": false,
      "persistent": true
    },
    "storybook:build": {
      "inputs": [
        "{app,components,hooks,i18n,layouts,middlewares,pages,providers,types,util}/**/*.{ts,tsx}",
        "{app,components,layouts,pages,styles}/**/*.{css,sass,scss}",
        "{next-data,scripts,i18n}/**/*.{mjs,json}",
        "{.storybook,public}/**/*.{ts,js,css,json}",
        "{app,pages}/**/*.{mdx,md}",
        "*.{md,mdx,json,ts,tsx,mjs,yml}"
      ],
      "outputs": ["storybook-static/**"]
    },
    "test:unit": {
      "inputs": [
        "{app,components,hooks,i18n,layouts,middlewares,pages,providers,types,util}/**/*.{ts,tsx}",
        "{app,components,layouts,pages,styles}/**/*.{css,sass,scss}",
        "{next-data,scripts,i18n}/**/*.{mjs,json}",
        "{app,pages}/**/*.{mdx,md}",
        "*.{md,mdx,json,ts,tsx,mjs,yml}"
      ]
    },
    "test:storybook": {
      "inputs": [
        "{app,components,hooks,i18n,layouts,middlewares,pages,providers,types,util}/**/*.{ts,tsx}",
        "{app,components,layouts,pages,styles}/**/*.{css,sass,scss}",
        "{next-data,scripts,i18n}/**/*.{mjs,json}",
        "{.storybook,public}/**/*.{ts,js,css,json}",
        "{app,pages}/**/*.{mdx,md}",
        "*.{md,mdx,json,ts,tsx,mjs,yml}"
      ]
    },
    "test": {
      "inputs": [
        "{app,components,hooks,i18n,layouts,middlewares,pages,providers,types,util}/**/*.{ts,tsx}",
        "{app,components,layouts,pages,styles}/**/*.{css,sass,scss}",
        "{next-data,scripts,i18n}/**/*.{mjs,json}",
        "{.storybook,public}/**/*.{ts,js,css,json}",
        "{app,pages}/**/*.{mdx,md}",
        "*.{md,mdx,json,ts,tsx,mjs,yml}"
      ]
    }
  }
}
